{
  "name": "blog-api",
  "version": "1.0.0",
  "description": "Blog API with Express.js, MongoDB, and JWT Authentication",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch --testTimeout=10000",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "seed": "node src/scripts/seed.js"
  },
  "keywords": ["nodejs", "express", "mongodb", "blog", "api", "jwt", "authentication"],
  "author": "Node.js Learning",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.4.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "mongodb-memory-server": "^8.13.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
} 